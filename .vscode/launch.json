{
  "version": "0.2.0",
  "configurations": [
    // 개발 모드 (Mock API)
    {
      "name": "Development (Mock)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "--dart-define=USE_MOCK_API=true"
      ]
    },
    // 프로덕션 (실제 백엔드 API)
    {
      "name": "Production (Real API)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "--dart-define=API_BASE_URL=https://api.tripgether.suhsaechan.kr",
        "--dart-define=USE_MOCK_API=false"
      ]
    }
  ]
}