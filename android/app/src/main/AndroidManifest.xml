<manifest xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- 파일 공유를 위한 권한입니다. -->
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:label="triptogether"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            <!-- [CRITICAL CHANGE]: launchMode를 singleTask로 설정하여
                 앱이 이미 실행 중일 때 새로운 Activity 인스턴스 생성 없이
                 공유 인텐트를 현재 Activity로 전달하도록 합니다. -->
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
              
            <!-- 기본 런처 인텐트 필터 (앱 시작) -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <!-- 1. URL/딥링크 (예시: example.com/invite)를 통한 앱 열기 지원 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="example.com"
                    android:pathPrefix="/invite"/>
            </intent-filter>
            
            <!-- 2. 파일 열기 (ACTION_VIEW, content:// 스키마) 지원 -->
            <intent-filter>
              <action android:name="android.intent.action.VIEW" />
              <category android:name="android.intent.category.DEFAULT" />
              <data
                  android:mimeType="*/*"
                  android:scheme="content" />
            </intent-filter>
            
            <!-- 3. 텍스트 공유 (ACTION_SEND) 지원 -->
            <intent-filter>
               <action android:name="android.intent.action.SEND" />
               <category android:name="android.intent.category.DEFAULT" />
               <data android:mimeType="text/*" />
            </intent-filter>

            <!-- 4. 이미지 공유 (Single Image) 지원 -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>

            <!-- 5. 이미지 다중 공유 (Multiple Images) 지원 -->
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>

            <!-- 6. 비디오 공유 (Single Video) 지원 -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="video/*" />
            </intent-filter>

            <!-- 7. 비디오 다중 공유 (Multiple Videos) 지원 -->
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="video/*" />
            </intent-filter>

            <!-- 8. 모든 종류의 파일 공유 (Single File) 지원 -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>

            <!-- 9. 모든 종류의 파일 다중 공유 (Multiple Files) 지원 -->
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>
        
        <!-- ... meta-data ... -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
    <!-- ... queries ... -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>
</manifest>
